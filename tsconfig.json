{
  "compilerOptions": {
    "types": ["vite/client", "pinia-plugin-persist", "unplugin-vue-define-options/macros-global"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
  },
  "typeRoots": ["./node_modules/@types/", "./src/types"],
  "include": [
  "src/**/*.ts", 
  "src/**/*.vue", 
  "src/**/*.tsx", 
  "src/**/*.d.ts", 
], 
  "exclude": ["node_modules", "src/**/__tests__/*", "dist"],
}
